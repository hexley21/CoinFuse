<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CF_DialogItem">
        <item name="android:drawablePadding">@dimen/default_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="CF_DialogItem.Sort">
        <item name="android:drawablePadding">@dimen/default_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:button">@null</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorSingle</item>
    </style>

    <style name="CF_SearchBar" parent="Widget.Material3.SearchBar">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearance.Material3.Corner.None
        </item>
    </style>

    <style name="CF_SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">?attr/colorOnSurface</item>
    </style>
    <style name="CF_BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:color">?attr/colorSurfaceVariant</item>
        <item name="itemActiveIndicatorStyle">@style/CF_BottomNavigation.Active</item>
        <item name="itemRippleColor">@color/navbar_ripple</item>
    </style>

    <style name="CF_BottomNavigation.Active" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorSurfaceVariant</item>
    </style>

    <style name="CF_Bookmark" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/bookmark_colors</item>
        <item name="android:background">@drawable/bookmark_background</item>
    </style>

    <style name="CF_Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_colors</item>
    </style>

    <style name="CF_Shimmer_Container">
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>