<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/android:colorBackground"
            android:paddingBottom="@dimen/default_padding">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/shim_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/default_padding_tiny"
                app:navigationIcon="@drawable/arrow_back" />

            <CheckBox
                style="@style/CF_Bookmark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/shim_top"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/default_padding_small"
                android:button="@drawable/sl_bookmark" />

            <androidx.cardview.widget.CardView
                android:id="@+id/shim_img"
                style="@style/CF_Shimmer_Container"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/shim_top"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="58dp"
                android:layout_marginTop="@dimen/default_padding_small"
                android:layout_marginEnd="@dimen/default_padding_small"
                android:layout_marginBottom="@dimen/default_padding_small" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/shim_top"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/shim_img"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/default_padding_small">

                <androidx.cardview.widget.CardView
                    style="@style/CF_Shimmer_Container"
                    android:layout_width="100dp"
                    android:layout_height="22dp"
                    android:layout_marginBottom="@dimen/default_padding_small" />

                <androidx.cardview.widget.CardView
                    style="@style/CF_Shimmer_Container"
                    android:layout_width="48dp"
                    android:layout_height="14dp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/shim_price"
                style="@style/CF_Shimmer_Container"
                android:layout_width="256dp"
                android:layout_height="26dp"
                android:layout_below="@id/shim_top"
                android:layout_alignStart="@id/shim_top"
                android:layout_marginStart="@dimen/default_padding"
                android:layout_marginTop="@dimen/default_padding" />

            <androidx.cardview.widget.CardView
                style="@style/CF_Shimmer_Container"
                android:layout_width="48dp"
                android:layout_height="18dp"
                android:layout_below="@id/shim_top"
                android:layout_alignTop="@id/shim_price"
                android:layout_marginStart="@dimen/default_padding_small"
                android:layout_toEndOf="@id/shim_price" />

            <androidx.cardview.widget.CardView
                style="@style/CF_Shimmer_Container"
                android:layout_width="169dp"
                android:layout_height="18dp"
                android:layout_below="@id/shim_price"
                android:layout_alignStart="@id/shim_price"
                android:layout_marginTop="@dimen/default_padding_small" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/graph_height"
                android:background="?android:attr/listDivider"
                android:padding="@dimen/default_padding" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurface"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    app:chipSpacingHorizontal="0dp">

                    <com.google.android.material.chip.Chip
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:chipBackgroundColor="?attr/colorSecondary" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:chipBackgroundColor="?attr/colorSecondary" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:chipBackgroundColor="?attr/colorSecondary" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:chipBackgroundColor="?attr/colorSecondary" />


                    <com.google.android.material.chip.Chip
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:chipBackgroundColor="?attr/colorSecondary" />


                    <com.google.android.material.chip.Chip
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:chipBackgroundColor="?attr/colorSecondary" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:chipBackgroundColor="?attr/colorSecondary" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:text="@string/statistics"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="?attr/colorOnBackground"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/default_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elegantTextHeight="true"
                        android:text="@string/tv_market_cap"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <androidx.cardview.widget.CardView
                        style="@style/CF_Shimmer_Container"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="@dimen/default_padding_small" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/default_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elegantTextHeight="true"
                        android:text="@string/tv_volume_24h"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <androidx.cardview.widget.CardView
                        style="@style/CF_Shimmer_Container"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="@dimen/default_padding_small" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/default_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elegantTextHeight="true"
                        android:text="@string/tv_supply"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <androidx.cardview.widget.CardView
                        style="@style/CF_Shimmer_Container"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="@dimen/default_padding_small" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/default_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elegantTextHeight="true"
                        android:text="@string/tv_24h_high"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <androidx.cardview.widget.CardView
                        style="@style/CF_Shimmer_Container"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="@dimen/default_padding_small" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/default_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elegantTextHeight="true"
                        android:text="@string/tv_24h_low"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <androidx.cardview.widget.CardView
                        style="@style/CF_Shimmer_Container"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="@dimen/default_padding_small" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
        </LinearLayout>
    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>