<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CN_DialogItem">
        <item name="android:drawablePadding">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
    </style>

    <style name="CN_SearchBar" parent="Widget.Material3.SearchBar">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearance.Material3.Corner.None
        </item>
    </style>

    <style name="CN_Bookmark" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/bookmark_colors</item>
        <item name="android:background">@drawable/bookmark_background</item>
    </style>

    <style name="CN_Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_colors</item>
    </style>
</resources>